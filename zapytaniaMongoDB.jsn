db.airport.aggregate(
    [{
        $group: {
            _id: {
                Origin_airport: "$Origin_airport",
                Org_airport_lat: "$Org_airport_lat",
                Org_airport_long: "$Org_airport_long"
            },
        }
    }]
)


db.airport.aggregate(
    [{
            $group: {
                _id: {
                    Origin_airport: "$Origin_airport",
