use Airport_db
DBQuery.shellBatchSize = 500
db.airport.aggregate([{
        $group: {
            _id: "$Origin_airport",
            sumPassengers: {
                $sum: "$Passengers"
            }
        }
    },
    {
        $sort: {
            sumPassengers: -1
        }
    },
    {
        $limit: 50
    }
])


var mapFunction1 = function() {
    emit(this.Origin_airport, this.Flights);
};
var reduceFunction1 = function(keyCustId, valuesPrices) {
    return Array.sum(valuesPrices);
};
db.airport.mapReduce(
    mapFunction1,
    reduceFunction1, {
        out: "Origin_airport_Flight"
    }
);

db.Origin_airport_Flight.find().sort({
    value: -1
}).limit(50)


db.airport.aggregate(
    [{
            $match: {
                Origin_airport: "ATL"
            }
        },
        {
            $group: {
                _id: {
                    Origin_airport: "$Origin_airport",
                    Year: {
                        $substr: ["$Fly_date", 0, 4]
                    }
                },
                sumPassengers: {
                    $sum: "$Passengers"
                }
            }
        },
        {
            $sort: {
                sumPassengers: -1
            }
        },
        {
            $limit: 50
        }
    ]
)


db.airport.aggregate(
    [{
            $match: {
                Origin_airport: "ATL"
            }
        },
        {
            $group: {
                _id: {
                    Origin_airport: "$Origin_airport",
